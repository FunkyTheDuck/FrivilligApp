<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrivilligApp.Resources.Styles.EventsStyle">


    <Style TargetType="Border" x:Key="HeaderBorder">
        <Setter Property="BackgroundColor" Value="#2562FF"/>
    </Style>
    <Style TargetType="Button" x:Key="HomeButton">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="WidthRequest" Value="150"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="BackgroundColor" Value="#2562FF"/>
    </Style>
    <Style TargetType="Button" x:Key="ProfileButton">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="WidthRequest" Value="150"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="BackgroundColor" Value="#2562FF"/>
    </Style>
</ResourceDictionary>