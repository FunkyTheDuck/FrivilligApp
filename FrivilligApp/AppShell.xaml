<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FrivilligApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FrivilligApp"
    xmlns:view="clr-namespace:FrivilligApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="FrivilligApp">
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate view:Login}"
        Route="Login" />
    <ShellContent
        ContentTemplate="{DataTemplate view:AddEvent}"
        Route="AddEvent" />
    <ShellContent
        ContentTemplate="{DataTemplate view:SignUp}"
        Route="SignUp" />
    <ShellContent
        ContentTemplate="{DataTemplate view:ChooseSkill}"
        Route="ChooseSkill"/>
    <ShellContent
        ContentTemplate="{DataTemplate view:Events}"
        Route="Events" />
    <ShellContent
        ContentTemplate="{DataTemplate view:Profile}"
        Route="Profile" />

    

</Shell>
